
# ===========================================
# EdTech Platform Environment Configuration
# ===========================================

# JWT Configuration
# Change this to a secure random string in production
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRATION = 30d

# Database Configuration
# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/edtech_platform

# Server Configuration
# Port for the backend server
PORT=4000

# Application Environment
# Options: development, production, test
NODE_ENV=development

# Session Configuration
# Session secret for cookie encryption
SESSION_SECRET=your_session_secret_key_here

# File Upload Configuration
# Maximum file size in bytes (500MB for videos)
MAX_VIDEO_SIZE=524288000
# Maximum file size for notes (10MB)
MAX_NOTES_SIZE=10485760

# Email Configuration (for notifications - optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# WebRTC Configuration (optional - for custom TURN servers)
TURN_SERVER_URL=turn:your-turn-server.com:3478
TURN_SERVER_USERNAME=your_turn_username
TURN_SERVER_PASSWORD=your_turn_password

# Frontend URL (for CORS configuration)
FRONTEND_URL=http://localhost:5173

# Security Settings
# Rate limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# CORS Origins (comma-separated for multiple origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:4000

# ===========================================
# Optional: Third-party Service Keys
# ===========================================

# Cloud Storage (if using AWS S3, Google Cloud, etc.)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=your_s3_bucket_name
AWS_REGION=us-east-1

# Video Processing (if using external service)
VIDEO_PROCESSING_API_KEY=your_video_processing_key

# Push Notifications (if using Firebase)
FIREBASE_SERVER_KEY=your_firebase_server_key

# Analytics (if using Google Analytics)
GOOGLE_ANALYTICS_ID=your_ga_tracking_id
