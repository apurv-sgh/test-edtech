                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Get Teacher Notes",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{teacher_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/notes/my-notes",
              "host": ["{{base_url}}"],
              "path": ["api", "notes", "my-notes"]
            }
          }
        },
        {
          "name": "Download Note File",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/notes/download/{{note_id}}/0",
              "host": ["{{base_url}}"],
              "path": ["api", "notes", "download", "{{note_id}}", "0"]
            }
          }
        }
      ]
